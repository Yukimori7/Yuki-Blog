---
// Header.astro
import { Icon } from 'astro-icon/components'

const navItems = [
  { name: '首页', href: '/' },
  { name: '归档', href: '/archive' },
  { name: '番剧', href: '#' },
  { name: '关于', href: '#' },
]
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 dark:bg-slate-900/80 border-b border-gray-200 dark:border-slate-800 transition-colors duration-300">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center h-16">
            <!-- Left: Logo -->
            <a href="/" class="flex-shrink-0 cursor-pointer group mr-auto">
                <img src="/logo.svg" alt="Logo" class="h-8 w-8 dark:invert" />
            </a>

            <!-- Middle: Navigation Tabs (Desktop) -->
            <nav class="hidden md:flex space-x-6 mr-4">
                {navItems.map(item => (
                    <a href={item.href} class="text-sm font-medium text-gray-700 hover:text-primary-600 dark:text-gray-300 dark:hover:text-white transition-colors">
                        {item.name}
                    </a>
                ))}
            </nav>

            <!-- Right: Dark Mode & Mobile Menu -->
            <div class="flex items-center space-x-4">
                <button id="theme-toggle" class="p-2 rounded-full text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-slate-800 focus:outline-none transition-colors">
                    <Icon name="iconoir:half-moon" class="w-5 h-5 hidden dark:block" />
                    <Icon name="iconoir:sun-light" class="w-5 h-5 block dark:hidden" />
                </button>

                <div class="md:hidden">
                    <button id="mobile-menu-btn" class="p-2 text-gray-600 dark:text-gray-300">
                        <Icon name="iconoir:menu" class="w-6 h-6" />
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Nav (Simple Toggle implementation via script in Layout or here) -->
        <div id="mobile-menu" class="hidden md:hidden py-2 border-t border-gray-200 dark:border-slate-800">
            {navItems.map(item => (
                <a href={item.href} class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-800">
                    {item.name}
                </a>
            ))}
        </div>
    </div>
</header>

<script>
    // Mobile menu logic encapsulated in component
    document.addEventListener('astro:page-load', () => {
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');
        if (btn && menu) {
            btn.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        }
    });
</script>
