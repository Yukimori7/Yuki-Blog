---
import { Icon } from 'astro-icon/components'
import { profile } from '../consts'
import Layout from '../layouts/Layout.astro'
import { getFormattedPosts } from '../utils/content'

// 1. 使用工具函数获取所有格式化后的文章
const allPosts = await getFormattedPosts()

// 2. 获取最近10篇文章用于展示
const recentPosts = allPosts.slice(0, 10)
---

<Layout title="我的个人博客">
    <!-- Profile Card -->
    <div class="flex flex-row items-center mb-16 fade-in max-w-[45rem] mx-auto">
        <div class="relative group mr-6 sm:mr-8 shrink-0">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-500 to-indigo-500 rounded-full opacity-75 group-hover:opacity-100 transition duration-500 blur"></div>
            <img src={profile.avatar} alt="Avatar" class="relative w-24 h-24 sm:w-28 sm:h-28 rounded-full border-4 border-white dark:border-slate-800 shadow-lg object-cover bg-white" />
        </div>
        <div class="flex flex-col items-start text-left">
            <h1 class="text-2xl sm:text-3xl font-bold tracking-tight bg-gradient-to-r from-primary-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent">{profile.name}</h1>
            <p class="mt-2 text-sm sm:text-base text-gray-500 dark:text-gray-400 max-w-md font-medium">{profile.slogan}</p>
            <div class="flex space-x-4 mt-3">
                {profile.socials.map(s => (
                    <a href={s.url} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors transform hover:scale-110">
                        <Icon name={s.icon} class="w-5 h-5" />
                    </a>
                ))}
            </div>
        </div>
    </div>

    <!-- Posts List -->
    <div class="space-y-2 max-w-[45rem] mx-auto fade-in">
        <h3 class="text-xs font-bold uppercase tracking-widest text-gray-400 dark:text-slate-500 mb-6">最近文章</h3>

        <div class="space-y-8">
            {recentPosts.map((post, index) => (
                <>
                    {index > 0 && <div class="border-t border-gray-100 dark:border-slate-800 w-full"></div>}
                    <article class="group relative flex flex-col items-start cursor-pointer p-4 -mx-4 rounded-xl hover:bg-gray-100 dark:hover:bg-slate-800/50 transition-colors duration-200">
                        <a href={`/blog/${post.slug}`} class="absolute inset-0 z-20"></a>

                        <time datetime={post.date} class="relative order-first mb-3 flex items-center text-sm text-gray-400 dark:text-gray-500 pl-3.5">
                            <span class="absolute inset-y-0 left-0 flex items-center" aria-hidden="true">
                                <span class="h-4 w-0.5 rounded-full bg-gray-200 dark:bg-slate-700"></span>
                            </span>
                            {post.date}
                        </time>
                        <h2 class="text-xl font-bold tracking-tight text-gray-800 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                            {post.title}
                        </h2>
                        <p class="mt-2 text-sm leading-6 text-gray-600 dark:text-gray-400 line-clamp-2">
                            {post.summary}
                        </p>
                    </article>
                </>
            ))}
        </div>

        <div class="flex justify-end mt-8 pt-4 border-t border-gray-100 dark:border-slate-800">
            <a href="/archive" class="group inline-flex items-center text-sm font-medium text-primary-500 hover:text-primary-600 dark:text-primary-400 dark:hover:text-primary-300 transition-colors">
                查看全部
                <Icon name="iconoir:arrow-right" class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" />
            </a>
        </div>
    </div>
</Layout>
